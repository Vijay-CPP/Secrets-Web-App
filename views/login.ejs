<%- include('partials/header') %>

  <div class="container-fluid login-div">
    <h1 class="login-heading text-center">Login</h1>

    <div class="card login-card mx-auto">
      <div class="card-body mx-auto login-card-body">

        <!-- Makes POST request to /login route -->
        <form action="/login" method="POST">
          <div class="form-group login-form">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="username" autocomplete="off">
          </div>
          <div class="form-group login-form">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-dark w-100 login-btn">Login</button>
        </form>
      </div>
    </div>

  </div>

  <%- include('partials/footer') %>